<div class="container d-flex flex-column">
  <% data.professional_projects.each do |project| %>
    <div class="project mt-3 mb-5 d-flex">
      <div class="image d-flex align-items-center">
        <iframe
        width="300"
        height="350"
        src="<%= project.video %>"
        title="<%= project.title %>"
        frameborder="0"
        allowfullscreen
      ></iframe>
      </div>
      <div class="project-infos d-flex flex-column flex-fill justify-content-center">
        <h3><%= project.title %></h3>
        <h4 class="mb-3"><%= project.subtitle %></h4>
        <p><%= project.description %></p>
        <p><%= project.tech %></p>
        <div class="project-tags">
          <% project.tags.each do |tag| %>
            <span><i class="<%= tag %>"></i></span>
          <% end %>
        </div>
        <div class="project-buttons mt-1">
          <% project.links&.each do |link| %>
            <a
          href="<%= link.url %>"
          target="_blank"
          class="btn btn-secondary btn-sm"
        >
              <i class="far fa-window-maximize"></i> <%= link.title %></a
        >
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
